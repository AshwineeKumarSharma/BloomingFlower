@model IEnumerable<BloomingFlower.Models.AcademicActivitiesImagesInfo>

@{
    ViewBag.Title = "Academics";
}

<h2>Academics</h2>
@if (Model != null)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ImageUrl)*@
               <span style="margin-left:55px;">Images</span> 
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.AltText)
            </th>*@

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ImageUrl)*@
                    <img src="~/Extras/AcademicActivitiesImages/@item.ImageUrl" alt="@item.AltText" height="200" width="200" />
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.AltText)
                </td>*@

                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

            </tr>
        }

    </table>



}

